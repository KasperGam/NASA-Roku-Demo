<?xml version="1.0" encoding="UTF-8"?>
<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs" />
    <script type="text/brightscript" uri="controllers/ScreenManager.brs" />
    <script type="text/brightscript" uri="controllers/GridScreen.brs" />
    <script type="text/brightscript" uri="controllers/SlideShowLogic.brs" />
    <script type="text/brightscript" uri="controllers/DetailsScreen.brs" />
    <script type="text/brightscript" uri="pkg:/source/defaults.brs" />
    <interface>
        <function name="Push"/>
        <function name="set_default_bkg"/>
        <function name="set_image_bkg"/>
    </interface>
    <children>
        <!-- add the logo -->
        <LayoutGroup
            layoutDirection="horiz"
            vertAlignment="center"
            translation="[90, 50]"
            itemSpacings="[30]" >

            <Poster
                id="logo"
                uri="pkg:/images/logo.png"
                height="100"
                width="100"
                loadDisplayMode="scaleToFit" />

            <Label
                id="logoText"
                color="0xFFFFFFFF"
                text="Hubble Image Search" />
        </LayoutGroup>

        <LayoutGroup
            layoutDirection="vert"
            translation="[1830, 50]"
            vertAlignment="center"
            horizAlignment="right" >

            <Label text="* to change search" />
        </LayoutGroup>

        <!-- Loading text, use while grabbing content-->
        <BusySpinner
            id="loadingIcon"
            visible="true"
        />
    </children>
</component>
