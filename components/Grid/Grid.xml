<component name="Grid" extends="Group"  initialFocus="RowList">
    <script type="text/brightscript" uri="Grid.brs" />
	<interface>
        <!-- Specifies the content for the Grid -->
        <field id="content" type="node" alias="RowList.content" />
        <field id="item_selected" type="intarray" alwaysnotify="true" alias="RowList.item_selected" />
        <field id="go_to_item" type="intarray" alias="RowList.go_to_item" />
    </interface>
    <children>
         <!-- Label with title and length of content -->
        <Label
	        id="title"
	        width="1000"
			translation="[110,180]"
	    />
        <!-- Label with description of content.
	         wrap="true" and numLines="3" means that the text can be broken into three lines -->
        <Label
	        id="description"
	        wrap="true"
	        width="1000"
	        numLines="3"
			translation="[120,210]"
	    />
        <RowList
            id="list"
            numRows="2"
            translation="[100,380]"
            rowitemSize="[[320,180]]"
            rowItemSpacing="[[25,0]]"
            itemSize="[1200,300]"
            rowLabelOffset="[[60,25]]"
            focusXOffset="[60]"
            showRowLabel="[true]"
            rowFocusAnimationStyle="floatingfocus"
            itemComponentName="PosterComponent"
        />
    </children>
</component>